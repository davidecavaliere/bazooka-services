{
  "name": "bazooka-endpoints",
  "private": true,
  "version": "1.0.1",
  "description": "microgamma endpoints project",
  "license": "MIT",
  "keywords": [],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "trash packages/*/lib",
    "prebuild": "run-s clean",
    "build": "tsc -b packages/*",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lint": "tslint --project . ",
    "cov:send": "codecov",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "prepare-release": "run-s all version doc:publish",
    "prerelease": "run-s build",
    "release": "lerna version",
    "publish:changed": "lerna publish from-package --yes",
    "sls": "sls",
    "sls:offline": "nodemon -w build/main --exec \"sls offline start --host 0.0.0.0\"",
    "watch:sls:offline": "run-s clean build:main && run-p \"build:main -- -w\" \"sls:offline\"",
    "sls:deploy:dev": "yarn build && DEBUG=microgamma:* MONGODB_ATLAS_CLUSTER_URI='mongodb://lambdauser:71HLFBmfB7srpA7T@cluster0-shard-00-00-rqrkt.mongodb.net:27017,cluster0-shard-00-01-rqrkt.mongodb.net:27017,cluster0-shard-00-02-rqrkt.mongodb.net:27017/test?ssl=true&replicaSet=Cluster0-shard-0&authSource=admin&retryWrites=true' yarn sls deploy --stage dev",
    "update:microgamma": "yarn lerna add @microgamma/apigator@latest @microgamma/loggator@latest @microgamma/digator@latest",
    "deploy:changed": "ts-node ./scripts/deploy-changed.ts",
    "deploy:one": ""
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@bazooka/apigateway": "file:packages/apigateway",
    "@bazooka/files": "file:packages/files",
    "@bazooka/groups": "file:packages/groups",
    "@bazooka/users": "file:packages/users",
    "@microgamma/apigator": "*",
    "@microgamma/datagator": "*",
    "@microgamma/digator": "*",
    "@microgamma/loggator": "*"
  },
  "devDependencies": {
    "@microgamma/serverless-apigator": "*",
    "@types/jest": "^23.3.13",
    "@types/jsonwebtoken": "^7.2.8",
    "chakram": "^1.5.0",
    "codecov": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^1.2.0",
    "istanbul-api": "^2.1.1",
    "jest": "24.*",
    "lerna": "^3.10.5",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "reflect-metadata": "^0.1.12",
    "serverless": "^1.30.1",
    "serverless-domain-manager": "^2.6.11",
    "serverless-offline": "^3.25.9",
    "serverless-plugin-monorepo": "^0.5.0",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "typedoc": "^0.11.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/packages/apigateway/src",
      "<rootDir>/packages/files/src",
      "<rootDir>/packages/users/src",
      "<rootDir>/packages/groups/src",
      "<rootDir>/scripts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@(bazooka/)(.*)$": "<rootDir>/packages/$2/src"
    },
    "reporters": [
      "default"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "coverage/"
  }
}
