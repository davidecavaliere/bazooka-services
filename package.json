{
  "name": "bazooka-endpoints",
  "private": true,
  "version": "1.0.0",
  "description": "microgamma endpoints project",
  "license": "MIT",
  "keywords": [],
  "workspace": [
    "packages/*"
  ],
  "scripts": {
    "clean": "trash packages/*/lib",

    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html && opn coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish",
    "sls": "sls",
    "sls:offline": "nodemon -w build/main --exec \"sls offline start --host 0.0.0.0\"",
    "watch:sls:offline": "run-s clean build:main && run-p \"build:main -- -w\" \"sls:offline\"",
    "sls:deploy:dev": "yarn build && DEBUG=microgamma:* MONGODB_ATLAS_CLUSTER_URI='mongodb://lambdauser:71HLFBmfB7srpA7T@cluster0-shard-00-00-rqrkt.mongodb.net:27017,cluster0-shard-00-01-rqrkt.mongodb.net:27017,cluster0-shard-00-02-rqrkt.mongodb.net:27017/test?ssl=true&replicaSet=Cluster0-shard-0&authSource=admin&retryWrites=true' sls deploy --stage dev"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@microgamma/apigator": "^1.10.5",
    "@microgamma/datagator": "^1.10.3",
    "@microgamma/loggator": "^1.10.3",
    "@microgamma/serverless-apigator": "^1.10.5"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^7.2.8",
    "ava": "^1.0.0-beta.5.1",
    "chakram": "^1.5.0",
    "codecov": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^1.2.0",
    "lerna": "^3.10.5",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "reflect-metadata": "^0.1.12",
    "serverless": "^1.30.1",
    "serverless-domain-manager": "^2.6.11",
    "serverless-localstack": "^0.3.1",
    "serverless-offline": "^3.25.9",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "typedoc": "^0.11.1",
    "typescript": "^3.2.2"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ],
    "cache": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
